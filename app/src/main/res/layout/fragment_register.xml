<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="15dp"
        android:text="Registration"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:layout_marginBottom="520dp"/>

    <TextView
    android:id="@+id/register_personal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:paddingHorizontal="25dp"
    android:paddingVertical="10dp"
    android:text="Personal Details"
    android:textAlignment="center"
    android:textSize="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/register_title"
    android:layout_marginTop="10dp"
    android:layout_marginRight="190dp"/>

    <TextView
        android:id="@+id/register_GP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:text="GP Details"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_personal"
        android:layout_marginTop="230dp"
        android:layout_marginRight="240dp"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/register_firstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="210dp"
            android:background="@drawable/border"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:text="First Name"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_firstNameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="210dp"
            android:layout_toRightOf="@+id/register_firstName"
            android:background="@drawable/border"
            android:hint="eg: Jason"
            android:paddingHorizontal="40dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/register_lastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="260dp"
            android:background="@drawable/border"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:text="Last Name"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_lastNameInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="260dp"
            android:layout_toRightOf="@+id/register_lastName"
            android:background="@drawable/border"
            android:hint="eg: Chun"
            android:paddingHorizontal="45dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/register_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="310dp"
            android:background="@drawable/border"
            android:paddingHorizontal="25dp"
            android:paddingTop="10dp"
            android:text="Password"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_passwordInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="310dp"
            android:layout_toRightOf="@+id/register_password"
            android:background="@drawable/border"
            android:hint="password"
            android:paddingHorizontal="40dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/register_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/border"
            android:paddingHorizontal="20dp"
            android:paddingTop="10dp"
            android:text="Email"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/register_emailInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="360dp"
            android:layout_toRightOf="@+id/register_password"
            android:background="@drawable/border"
            android:hint="jasonc@gmail.com"
            android:paddingHorizontal="40dp"
            android:paddingTop="10dp"
            android:textSize="20dp" />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>